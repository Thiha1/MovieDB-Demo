                android:textColor="#3F3E3E"
                android:textSize="15sp"
                android:scrollbars="vertical"/>

        </ScrollView>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:weightSum="3">
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="Similar"
             android:textColor="#636262"
             android:layout_weight="1"
             android:textSize="17sp"
             android:textStyle="bold"
             android:layout_gravity="center"
             android:id="@+id/SimilarLabel"
             android:layout_margin="10dp"
             android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Review"
                android:textColor="#636262"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/reviewsLabel"
                android:layout_margin="10dp"
                android:gravity="center"/>

         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="Trailer"
             android:textColor="#636262"
             android:layout_weight="1"
             android:textSize="17sp"
             android:textStyle="bold"
             android:layout_gravity="center"
             android:id="@+id/trailerLabel"
             android:layout_margin="10dp"
             android:gravity="center"/>
       <!--  <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="Image"
             android:textColor="#636262"
             android:layout_weight="1"
             android:textSize="17sp"
             android:textStyle="bold"
             android:layout_gravity="center"
             android:id="@+id/imageLabel"
             android:layout_margin="10dp"
             android:gravity="center"/>-->


     </LinearLayout>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieTrailer"
           android:layout_margin="8dp"
            android:orientation="horizontal"

            />
    </HorizontalScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/verticalScrollView"
      >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/movieReviews"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/similar_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="right"
            android:weightSum="18">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_horizontal"
                android:tint="#636262"
                android:layout_weight="0.5"
                android:id="@+id/horiView"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_grid"
                android:tint="#636262"
                android:layout_weight="0.5"
                android:id="@+id/gridView"/>
        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/similar_list"
        android:layout_gravity="center"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>


</RelativeLayout>